
{% for operator, info in operators.items() -%}
<region>
  <name>{{operator}} {{info[1]}} Reactors</name>
  <config>
    <NullRegion/>
  </config>
  <institution>
    <initialfacilitylist>
      <entry>
        <prototype>{{info[3]}}MWe {{info[1]}}</prototype>
        <number>{{info[2]}}</number>
      </entry>
    </initialfacilitylist>
    <name>{{operator}}</name>
    <config>
      <NullInst/>
    </config>
  </institution>
</region>
{% endfor -%}


{% for country, deploy in countries_infra.items() -%}
<region>
  <name>{{country}} Infrastructure</name>
  <config>
    <NullRegion/>
  </config>
  <institution>
    <initialfacilitylist>
      <entry>
        <prototype>UraniumMine</prototype>
        <number>{{deploy[0]}}</number>
      </entry>
      <entry>
        <prototype>EnrichmentPlant</prototype>
        <number>{{deploy[1]}}</number>
      </entry>
      <entry>
        <prototype>NuclearRepository</prototype>
        <number>{{deploy[2]}}</number>
      </entry>
    </initialfacilitylist>
    <name>{{country}} Nuclear</name>
    <config>
      <NullInst/>
    </config>
  </institution>
</region>
{% endfor -%}
